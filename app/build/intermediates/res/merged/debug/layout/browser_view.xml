<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/browserView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="vertical" >
    
    <include layout="@layout/admob_view" />
    
    <LinearLayout
        android:id="@+id/browserButtonGroup"
        android:gravity="center"
        android:background="@color/brower_button_bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <ImageButton
            android:id="@+id/webViewGoBack"
            android:background="@color/transparent"
            android:src="@anim/brower_back_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <ImageButton
            android:layout_marginLeft="25dip"
            android:id="@+id/webViewGoForward"
            android:background="@color/transparent"
            android:src="@anim/brower_forward_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <ImageButton
            android:layout_marginLeft="25dip"
            android:id="@+id/webViewRefresh"
            android:background="@color/transparent"
            android:src="@anim/brower_refresh_selector"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <ImageButton
            android:layout_marginLeft="25dip"
            android:id="@+id/webViewClose"
            android:background="@color/transparent"
            android:src="@anim/brower_quit_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <ImageButton
            android:layout_marginLeft="25dip"
            android:id="@+id/webViewSetting"
            android:background="@color/transparent"
            android:src="@anim/brower_setting_selector"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
   	</LinearLayout>
    
    <ProgressBar
        android:id="@+id/webViewProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="6dip"
        android:maxHeight="6dip"
        />

    <LinearLayout
        android:id="@+id/webViewContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
        <!--
        <WebView
	        android:id="@+id/webView"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent" >
    	</WebView>
    	-->
    </LinearLayout>
    	
</LinearLayout>